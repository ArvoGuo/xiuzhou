<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <ImageView
            android:id="@+id/data_fragment_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_centerInParent="true"
            android:background="#666666"/>

        <TextView
            android:id="@+id/data_fragment_notice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/data_fragment_line"
            android:gravity="center"
            android:text="治水办通知"
            android:textColor="#2196f3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/data_fragment_criticism"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/data_fragment_line"
            android:gravity="center"
            android:text="逾期通报"
            android:textColor="#666666"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">

        <View
            android:id="@+id/data_fragment_leftcolor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2196f3"/>

        <View
            android:id="@+id/data_fragment_rightcolor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ListView
            android:id="@+id/data_fragment_noticeList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000"
            android:divider="#666666"
            android:dividerHeight="1px"/>

        <ListView
            android:id="@+id/data_fragment_criticismList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000"
            android:divider="#666666"
            android:dividerHeight="1px"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
