<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:text="请选择报告对象"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#999999"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:text="相关职能部门"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/choose_department_text1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="环保中队"
        android:textSize="16sp"
        android:textColor="#2196f3"/>

    <TextView
        android:id="@+id/choose_department_text2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="农技中心"
        android:textSize="16sp"
        android:textColor="#2196f3"/>

    <TextView
        android:id="@+id/choose_department_text3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="水机站"
        android:textSize="16sp"
        android:textColor="#2196f3"/>

    <TextView
        android:id="@+id/choose_department_text4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="行政执法中队"
        android:textSize="16sp"
        android:textColor="#2196f3"/>

    <TextView
        android:id="@+id/choose_department_text5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="四位一体保洁办"
        android:textSize="16sp"
        android:textColor="#2196f3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#999999"/>

    <TextView
        android:id="@+id/choose_department_text6"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:text="上级河长"
        android:textSize="18sp" />

</LinearLayout>